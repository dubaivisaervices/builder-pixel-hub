# Neon PostgreSQL Database Configuration
# Copy this to .env and fill in your Neon database URL

# Neon Database URL (from Neon dashboard)
NEON_DATABASE_URL=postgresql://username:password@ep-hostname.us-east-1.aws.neon.tech/database_name?sslmode=require

# Optional: Database connection settings
DB_HOST=ep-hostname.us-east-1.aws.neon.tech
DB_USER=username
DB_PASSWORD=password
DB_NAME=database_name
DB_PORT=5432

# Application settings
NODE_ENV=production
API_BASE_URL=https://reportvisascam.com

# Netlify Build Configuration
# These will be set in Netlify environment variables
NETLIFY_FUNCTIONS_URL=/.netlify/functions
